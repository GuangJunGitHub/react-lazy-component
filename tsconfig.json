{
	"compilerOptions": {
		"jsx": "react-jsx",
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["dist", "node_modules", "tests"]
}
